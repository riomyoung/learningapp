<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    tools:context=".IntroToPinyin"
    android:id="@+id/intro_to_pinyin"
    android:screenOrientation="landscape">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Chinese!"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="When looking at number of native speakers, Chinese
has an overwhelming majority, with 1.3 billion native speakers around the world!
That's about one in six people! Chinese is structurally similar to English, but there is one
part of Chinese many English speakers have trouble with: tones."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
/>

    <Button
        android:id="@+id/back_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/checkbox"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/next_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/checkbox"
        android:layout_marginBottom="10dp"
        />

<!--    <CheckBox-->
<!--        android:id="@+id/checkbox"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
