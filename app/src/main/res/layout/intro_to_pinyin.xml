<!--        android:text="Don't show again"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        />-->

    <ImageButton
        android:id="@+id/xbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_button"

        />

    <ImageView
        android:id="@+id/tone_graphs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tone_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explanation"
        />

    <Button
        android:id="@+id/first_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mā"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/second_tone"
        app:layout_constraintBottom_toTopOf="@id/next_butt"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/second_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="má"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/first_tone"
        app:layout_constraintRight_toLeftOf="@+id/third_tone"
        app:layout_constraintBottom_toTopOf="@id/next_butt"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/third_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mǎ"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/next_butt"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/fourth_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mà"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/third_tone"
        app:layout_constraintRight_toLeftOf="@+id/fifth_tone"
        app:layout_constraintBottom_toTopOf="@id/next_butt"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/fifth_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ma"
        android:background="#00AAFF"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fourth_tone"
        app:layout_constraintBottom_toTopOf="@id/next_butt"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        android:layout_marginBottom="10dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>