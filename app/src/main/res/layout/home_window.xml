<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeButton"
    android:background="@color/white"
    android:screenOrientation="landscape"
    android:id="@+id/home_menu">

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/go_to_title_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Screen"
        app:layout_constraintTop_toBottomOf="@id/menu_text"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/go_to_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town"
        app:layout_constraintTop_toBottomOf="@id/go_to_title_screen"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id="@+id/close_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x_box"
        android:background="@drawable/rounded_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>